@page
@model PizzaPlace.ViewOrdersModel
@{
    ViewData["Title"] = "ViewOrders";
}

<h1>View Orders</h1>

<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Surname</th>
            <th scope="col">Message</th>
            <th scope="col">Status</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model.Orders)
        {
        <tr>
            <th scope="row">@order.Id</th>
            <td>@order.Name</td>
            <td>@order.Surname</td>
            <td>@order.Message</td>
            @if (order.IsProcessed)
            {
                <td>Processed</td>
            }
            else
            {
                <td>
                 <a asp-page-handler="SetProcessed" asp-route-id="@order.Id" class="btn btn-warning btn-sm">
                  Process Order
                 </a> 
                </td>
            }
        </tr>
        }
    </tbody>
</table>